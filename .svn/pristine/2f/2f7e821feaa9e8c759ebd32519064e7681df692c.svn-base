<!--pages/healthy/healthy.wxml-->
<view class="container">
    <scroll-view class="scrollView" scroll-y="{{true}}">
        <view class="main">
            <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="content">
                <view class="item">
                    <view >
                        <text>打卡时间：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <picker class="picker" mode="date"   value="{{startDate}}" bindchange="bindPickerChangeCheckDate">
                        <input type="text" name="startDate" value="{{startDate}}" name="" id=""  disabled="{{true}}"/>
                    </picker>
                </view>
 
                <view class="title">每次情况</view>
                <view class="item">
                    <view >
                        <text>健康状况：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <radio-group  bindchange="radioChangeHealthyStatus">
                        <radio class="radio" style="display:inline-block;margin-right:20rpx;" color="#176CC1" wx:for-items="{{items1}}" checked="{{item.checked}}" wx:key="name" value="{{item.name}}">
                            <view style="font-size:32rpx;">{{item.name}}</view>
                        </radio>
                    </radio-group>
                </view>
                <view class="item">
                    <view>
                        <text>身体症状：</text>
                        <image wx:if="{{!disabledChecbox}}" class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <checkbox-group bindchange="checkboxChange">
                        <label  class="radio checkbox"   wx:for="{{items}}"  wx:key="name" >
                            <checkbox value="{{item.name}}"  color="#176CC1"    checked="{{item.checked}}"   disabled="{{disabledChecbox}}"/>
                            {{item.name}}
                        </label>
                    </checkbox-group>
                </view>

                <view class="item">
                    <view>
                        <text>有无外出：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <radio-group  bindchange="radioChangeGoOut">
                        <radio class="radio" style="display:inline-block;margin-right:20rpx;" color="#176CC1" wx:for-items="{{items2}}"  checked="{{item.checked}}" wx:key="name" value="{{item.name}}">
                            <view style="font-size:32rpx;">{{item.name}}</view>
                        </radio>
                    </radio-group>
                </view>
            <!-- </view> -->
            <!-- 提问情况 -->
            <!-- <view class="content"> -->
                <view class="title">体温情况</view>
                <view class="item">
                    <view >
                        <text>早上：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <radio-group  bindchange="radioChangeForenoon">
                        <radio class="radio" style="display:inline-block;margin-right:20rpx;"  checked="{{item.checked}}" color="#176CC1" wx:for-items="{{items3}}" wx:key="name" value="{{item.name}}">
                            <view style="font-size:32rpx;">{{item.name}}</view>
                        </radio>
                    </radio-group>
                </view>
                <view class="item">
                    <view>
                        <text>中午：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <radio-group  bindchange="radioChangeNoon">
                        <radio class="radio" style="display:inline-block;margin-right:20rpx;"  checked="{{item.checked}}" color="#176CC1" wx:for-items="{{items4}}" wx:key="name" value="{{item.name}}">
                            <view style="font-size:32rpx;">{{item.name}}</view>
                        </radio>
                    </radio-group>
                </view>
                <view class="item">
                    <view>
                        <text>晚上：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <radio-group  bindchange="radioChangeNight">
                       <radio class="radio" style="display:inline-block;margin-right:20rpx;"  checked="{{item.checked}}" color="#176CC1" wx:for-items="{{items5}}" wx:key="name" value="{{item.name}}">
                           <view style="font-size:32rpx;">{{item.name}}</view>
                       </radio>
                   </radio-group>
                </view>

                <view class="title">个人信息</view>
                <view class="item">
                    <view>
                        <text>姓名：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <input name="userName" id="userName" value="{{checkinInfo.userName}}" type="text" placeholder="请填写个人姓名" />
                </view>
                <view class="item">
                    <view>
                        <text>电话：</text>
                        <image class="" src="../../static/require.png" mode="aspectFit" lazy-load="false"></image>
                    </view>
                    <input name="userMobile" id="userMobile" maxlength="11" value="{{checkinInfo.userMobile}}" type="number" placeholder="请填写个人电话" />
                </view>


                 <view style="text-align:center;margin:50rpx 0 30rpx;color:#fff;">
                        <button type="default" size="mini"  disabled="{{disabledBtn}}"  class=" resetBtn {{disabledBtn?'disabledBtn':''}}"  formType="reset" style="margin-right:20rpx;color:#333;font-size:28rpx;">重置</button>
                        <button type="primary" size="mini" formType="submit" class="{{disabledBtn?'disabledBtn':''}}"   disabled="{{disabledBtn}}" style="background:#176CC1;color:#fff;font-size:28rpx;">上报</button>
                </view>
            </view>

            <!-- <button formType="reset">重置</button> -->
            <!-- <button formType="submit">提交</button> -->
        </form>
        </view>
    </scroll-view>
</view>
